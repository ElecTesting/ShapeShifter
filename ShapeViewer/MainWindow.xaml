        <TextBlock HorizontalAlignment="Left" Margin="148,36,0,0" TextWrapping="Wrap" Text="PosY" VerticalAlignment="Top"/>
        <TextBlock Name="PosX" HorizontalAlignment="Left" Margin="202,16,0,0" TextWrapping="Wrap" Text="TextBlock" VerticalAlignment="Top"/>
        <TextBlock Name="PosY" HorizontalAlignment="Left" Margin="202,37,0,0" TextWrapping="Wrap" Text="TextBlock" VerticalAlignment="Top"/>
        <TextBlock HorizontalAlignment="Left" Margin="1005,157,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="40"><Run Language="en-gb" Text="Width"/></TextBlock>
        <TextBlock HorizontalAlignment="Left" Margin="1005,173,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="40" RenderTransformOrigin="0.5,2.102"><Run Language="en-gb" Text="Height"/></TextBlock>
        <TextBlock x:Name="WidthText" HorizontalAlignment="Left" Margin="1045,157,0,0" TextWrapping="Wrap" Text="TextBlock" VerticalAlignment="Top" Width="127"/>
        <TextBlock x:Name="HeightText" HorizontalAlignment="Left" Margin="1045,174,0,0" TextWrapping="Wrap" Text="TextBlock" VerticalAlignment="Top" Width="127"/>
        <TextBlock x:Name="ZoomVal" HorizontalAlignment="Left" Margin="23,50,0,0" TextWrapping="Wrap" Text="ZoomVal" VerticalAlignment="Top"/>
        <Image Name="ImageDump" HorizontalAlignment="Left" Height="552" Margin="322,23,0,0" VerticalAlignment="Top" Width="614"/>
        <Button Content="Get Area" HorizontalAlignment="Left" Margin="1005,363,0,0" VerticalAlignment="Top" Width="111" Height="34" Click="Button_GetArea"/>
        <Canvas Name="_canvas" HorizontalAlignment="Left" Height="229" Margin="61,81,0,0" VerticalAlignment="Top" Width="204" RenderTransformOrigin="0.5,0.5">
            <Rectangle x:Name="rectangle" Width="100" Height="50" Fill="RoyalBlue" MouseDown="ViewWindow_MouseDown" MouseMove="ViewWindow_MouseMove" MouseUp="ViewWindow_MouseUp" Canvas.Left="52" Canvas.Top="64"/>
        </Canvas>
    </Grid>
</Window>
